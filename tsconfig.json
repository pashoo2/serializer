{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es2018", "DOM", "DOM.Iterable"],
    "module": "CommonJS",
    "allowJs": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "incremental": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "paths": {
      "@root/*": ["./src/*"],
    }
  },
  "include": [
    "src/",
  ]
}
